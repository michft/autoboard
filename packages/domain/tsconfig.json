{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../shared"
    },
    {
      "path": "../services"
    },
    {
      "path": "../db"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
